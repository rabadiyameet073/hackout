{
  "name": "community-mangrove-watch",
  "version": "1.0.0",
  "description": "A participatory monitoring system for mangrove forest conservation",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:mobile && npm run install:dashboard && npm run install:ai",
    "install:backend": "cd backend && npm install",
    "install:mobile": "cd mobile && npm install",
    "install:dashboard": "cd dashboard && npm install",
    "install:ai": "cd ai-service && pip install -r requirements.txt",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:dashboard\" \"npm run dev:ai\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:ai": "cd ai-service && python -m uvicorn main:app --reload --port 8001",
    "build": "npm run build:backend && npm run build:dashboard && npm run build:mobile",
    "build:backend": "cd backend && npm run build",
    "build:dashboard": "cd dashboard && npm run build",
    "build:mobile": "cd mobile && expo build",
    "test": "npm run test:backend && npm run test:dashboard && npm run test:ai",
    "test:backend": "cd backend && npm test",
    "test:dashboard": "cd dashboard && npm test",
    "test:ai": "cd ai-service && python -m pytest",
    "lint": "npm run lint:backend && npm run lint:dashboard && npm run lint:mobile",
    "lint:backend": "cd backend && npm run lint",
    "lint:dashboard": "cd dashboard && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "mangrove",
    "conservation",
    "environmental",
    "monitoring",
    "community",
    "mobile-app",
    "ai",
    "geospatial"
  ],
  "author": "Community Mangrove Watch Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/community-mangrove-watch.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/community-mangrove-watch/issues"
  },
  "homepage": "https://github.com/your-org/community-mangrove-watch#readme"
}
